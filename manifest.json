{
    "manifest_version": 2,
    "name": "AniList+",
    "version": "0.1.2",
  
    "description": "Enhanced AniList experience",
    "icons": {},
  
    "browser_action": {
        "default_title": "AniList+",
        "default_icon": {
          "16": "images/icon.png",
          "32": "images/icon.png",
          "64": "images/icon.png",
          "128": "images/icon.png"
        }
      },
    "author": "HadriAn",
    "content_scripts": [
      {
        "matches": ["https://*.anilist.co/*"],
        "run_at": "document_idle",
        "js": ["contentScript.js"]
      }
    ],
    "minimum_chrome_version": "50",
    "permissions": ["tabs"],
    "short_name": "AniList+"
  }