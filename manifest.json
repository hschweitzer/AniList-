{
  "manifest_version": 2,
  "name": "AniList+",
  "version": "0.3",

  "description": "Enhanced AniList experience",

  "page_action": {
      "default_title": "AniList+",
      "default_icon": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "64": "images/icon.png",
        "128": "images/icon.png"
      }
    },
  "author": "HadriAn",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://anilist.co/user/*"],
      "js": ["jquery-3.3.1.min.js", "contentScript.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "minimum_chrome_version": "50",
  "permissions": ["tabs", "activeTab"],
  "short_name": "AniList+",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "64": "images/icon.png",
    "128": "images/icon.png"
  }
  }